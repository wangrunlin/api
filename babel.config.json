{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    "@babel/proposal-object-rest-spread",
    ["module-resolver", {
      "root": ["./src"],
      "alias": {
        "@src": "./src"
      }
    }]
  ]
}